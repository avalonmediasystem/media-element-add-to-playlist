.mejs-controls .mejs-add-to-playlist button {
  background: transparent url(<%= image_path 'add_to_playlist_icon.svg' %>) no-repeat;
  background-size: 27pt !important;
  background-position: 50%;
}

#add_to_playlist {
  background: #696667;
  color: white;
  padding: 10pt;
}

#add_to_playlist table {
  width: 100%;
}

#add_to_playlist th, td {
  padding: 2pt;
  text-align: right;
}

#add_to_playlist td {
  padding-right: 5pt;
}

#add_to_playlist select, input{
  width: 100%;
  color: black;
}
